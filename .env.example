# Environment Configuration Template
# Copy this file to .env.local for local development
# Copy to .env.production for production deployment

# Application
NODE_ENV=development
VITE_APP_VERSION=2.0.0
VITE_APP_NAME="Cybersecurity Compliance Platform"

# Authentication
VITE_AUTH_PROVIDER=supabase
VITE_JWT_SECRET=your-jwt-secret-here
VITE_SESSION_TIMEOUT=28800000

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Security
VITE_ENABLE_CSP=true
VITE_SECURE_COOKIES=true
VITE_ENABLE_HTTPS=true

# Monitoring & Analytics
VITE_SENTRY_DSN=your-sentry-dsn
VITE_ANALYTICS_ID=your-analytics-id
VITE_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_ADVANCED_FEATURES=true
VITE_ENABLE_MULTI_TENANT=true

# API Configuration
VITE_API_BASE_URL=/api
VITE_API_TIMEOUT=30000

# Performance
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_LAZY_LOADING=true
VITE_BUNDLE_ANALYZER=false

# Testing
VITE_ENABLE_TESTING=true
VITE_TEST_COVERAGE_THRESHOLD=80